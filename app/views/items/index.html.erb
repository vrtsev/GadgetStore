<p id="notice"><%= notice %></p>

<br />
<div class="row">
<% @items.each do |i| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
    <%= image_tag i.photo.url(:medium) %>    
      <div class="caption">
        <h3><%= link_to i.name, item_path(i) %></h3>
      </div>
    </div>
  </div>
<% end %>
</div>