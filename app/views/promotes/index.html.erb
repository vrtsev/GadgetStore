    <div class="row">
    <% @promotes.each do |p| %>
      <div class="col-md-6">
        <div class="thumbnail">
        <%= url_to_image(500, p.image) %>
          <div class="caption">
            <h3><%= link_to p.name, promote_path(p) %></h3>
          </div>
        </div>
      </div>
    <% end %>
    </div>

  </div>
</div>

<%= render partial: 'items/visited_items' unless @visited_items.count == 0 %>
