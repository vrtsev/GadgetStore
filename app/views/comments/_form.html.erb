<%= simple_form_for [@item, @comment] do |f| %>
  <%= f.error_notification %>

  <h4><b><%= @item.comments.count %> комментарий(я). Вы можете оставить свой комментарий в форме ниже: </b></h4>

  <div class="form-inputs">
    <%= f.input :user, label: false, class: "form-control", placeholder: "Ваше имя" %>
    <%= f.input :content, as: :text, label: false, hint: 'Оскорбительная речь, спам и флуд будут удалены', class: "form-control", placeholder: "Ваш комментарий..." %>

  </div>

  <div class="form-actions">
    <%= button_to "Создать", item_comments_path(@item) %>
  </div>
<% end %>